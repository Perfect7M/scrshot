{
  "name": "@scrshot/build",
  "version": "0.2.1",
  "description": "Build plugins for Scrshot - Create up-to-date application screenshots",
  "keywords": [
    "cli",
    "screenshots",
    "up-to-date screenshots"
  ],
  "author": {
    "name": "Marcin Skrzy≈Ñski",
    "url": "https://marcin.page/"
  },
  "homepage": "https://scrshot.dev",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Perfect7M/scrshot.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "require": "./dist/vite.js",
      "import": "./dist/vite.mjs"
    },
    "./webpack": {
      "types": "./dist/webpack.d.ts",
      "require": "./dist/webpack.js",
      "import": "./dist/webpack.mjs"
    },
    "./rollup": {
      "types": "./dist/rollup.d.ts",
      "require": "./dist/rollup.js",
      "import": "./dist/rollup.mjs"
    },
    "./esbuild": {
      "types": "./dist/esbuild.d.ts",
      "require": "./dist/esbuild.js",
      "import": "./dist/esbuild.mjs"
    },
    "./rspack": {
      "types": "./dist/rspack.d.ts",
      "require": "./dist/rspack.js",
      "import": "./dist/rspack.mjs"
    },
    "./next": {
      "types": "./dist/next.d.ts",
      "require": "./dist/next.js",
      "import": "./dist/next.mjs"
    },
    "./nuxt": {
      "types": "./dist/nuxt.d.ts",
      "require": "./dist/nuxt.js",
      "import": "./dist/nuxt.mjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "require": "./dist/types.js",
      "import": "./dist/types.js"
    },
    "./*": "./*"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./*"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:fix": "esno scripts/postbuild.ts",
    "dev": "tsup --watch src",
    "check-types": "tsc --noEmit",
    "lint": "publint",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@scrshot/config": "0.2.1",
    "recast": "0.23.2",
    "unplugin": "1.3.1"
  },
  "devDependencies": {
    "typescript": "4.9.4",
    "tsup": "7.2.0",
    "esno": "0.17.0",
    "publint": "0.2.2"
  }
}
